<?xml version="1.0" encoding="utf-8"?>
<ink.techat.client.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@color/white">
    <!-- 自定义图片选择器内置正方形控件 -->

    <!-- 图片 -->
    <ImageView
        android:id="@+id/img_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"/>
    <!-- 阴影 -->
    <View
        android:id="@+id/view_shade"
        tools:visibility="gone"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_112"/>

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:button="@drawable/sel_cb_circle"
        android:drawablePadding="0dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/len_2"
        android:enabled="false"
        android:padding="0dp"
        android:clickable="false"
        android:buttonTint="@color/cb_gallery"/>

</ink.techat.client.common.widget.SquareLayout>