<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ink.techat.client.push.fragments.main.ActiveFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/active_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_recycler"
        android:paddingTop="@dimen/len_12"
        android:paddingBottom="@dimen/len_12"
        android:clipToPadding="false"
        android:visibility="gone"
        android:elevation="1dp"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop"/>

    <ink.techat.client.common.widget.EmptyView
        android:id="@+id/active_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
