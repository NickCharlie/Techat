<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.user.UpdateInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_portraits"
            android:src="@drawable/ic_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/updateInfo_scrollView"
        android:layout_weight="8"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="@string/label_user_inf_account"
                android:textSize="@dimen/len_20"
                android:paddingStart="@dimen/len_28"
                android:textColor="@color/blue_grey_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/font_20"
                    android:paddingStart="@dimen/len_28"
                    android:textColor="@color/black"
                    android:id="@+id/txt_user_phone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/len_60"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_user_sex"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/len_60"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="ç”·"
                    android:textColor="@color/black"
                    android:textSize="@dimen/len_20" />

            </LinearLayout>

            <View
                android:layout_height="1px"
                android:layout_marginStart="@dimen/len_20"
                android:layout_marginEnd="@dimen/len_8"
                android:layout_marginTop="@dimen/len_2"
                android:layout_marginBottom="@dimen/len_2"
                android:background="@color/black_alpha_32"
                android:layout_width="match_parent" />

            <TextView
                android:textColor="@color/blue_grey_500"
                android:textSize="@dimen/len_20"
                android:paddingStart="@dimen/len_28"
                android:text="@string/label_user_inf_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_user_name"
                android:paddingStart="@dimen/len_28"
                android:textColor="@color/black"
                android:maxLength="16"
                android:maxLines="1"
                android:inputType="textMultiLine"
                android:textSize="@dimen/len_28"
                android:layout_width="match_parent"
                app:gLineSize="0dp"
                app:gHintTitle="none"
                android:layout_height="@dimen/len_60" />

            <View
                android:layout_height="1px"
                android:layout_marginStart="@dimen/len_20"
                android:layout_marginEnd="@dimen/len_8"
                android:layout_marginTop="@dimen/len_2"
                android:layout_marginBottom="@dimen/len_2"
                android:background="@color/black_alpha_32"
                android:layout_width="match_parent" />

            <TextView
                android:text="@string/label_user_inf_desc"
                android:textColor="@color/blue_grey_500"
                android:paddingStart="@dimen/len_28"
                android:textSize="@dimen/len_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_user_desc"
                android:textColor="@color/black"
                android:paddingStart="@dimen/len_28"
                android:maxLength="30"
                android:maxLines="2"
                android:inputType="textMultiLine"
                app:gLineSize="0dp"
                app:gHintTitle="none"
                android:textSize="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_60"/>

            <View
                android:layout_height="1px"
                android:layout_marginStart="@dimen/len_20"
                android:layout_marginEnd="@dimen/len_8"
                android:layout_marginTop="@dimen/len_2"
                android:layout_marginBottom="@dimen/len_2"
                android:background="@color/black_alpha_32"
                android:layout_width="match_parent" />

            <TextView
                android:text="@string/label_user_inf_email"
                android:textSize="@dimen/len_20"
                android:paddingStart="@dimen/len_28"
                android:textColor="@color/blue_grey_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_user_email"
                android:textColor="@color/black"
                android:maxLength="20"
                android:maxLines="1"
                android:inputType="textMultiLine"
                android:paddingStart="@dimen/len_28"
                android:textSize="@dimen/len_24"
                app:gHintTitle="none"
                app:gLineSize="0dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_60" />

            <View
                android:layout_height="1px"
                android:layout_marginStart="@dimen/len_20"
                android:layout_marginEnd="@dimen/len_8"
                android:layout_marginTop="@dimen/len_2"
                android:layout_marginBottom="@dimen/len_2"
                android:background="@color/black_alpha_32"
                android:layout_width="match_parent" />


            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/btn_user_finish"
                android:layout_marginTop="@dimen/len_20"
                android:layout_gravity="center_horizontal"
                android:text="@string/string_btn_finish"
                android:textSize="@dimen/len_20"
                android:textColor="@color/black"
                android:backgroundTint="@color/trans"
                android:layout_width="@dimen/len_76"
                android:layout_height="@dimen/len_52"/>

            <net.qiujuer.genius.ui.widget.Loading
                android:id="@+id/update_user_info_loading"
                android:layout_marginTop="@dimen/len_20"
                android:layout_width="@dimen/len_36"
                android:layout_height="@dimen/len_36"
                android:layout_gravity="center"
                android:visibility="gone"
                app:gAutoRun="false"
                app:gBackgroundColor="@color/colorAccent"
                app:gForegroundColor="@color/white"
                app:gForegroundLineSize="1dp"
                tools:visibility="visible"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
