<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:foreground="@drawable/ic_touch_fg"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginBottom="@dimen/len_2"
    android:paddingBottom="@dimen/len_12"
    android:paddingTop="@dimen/len_12"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_16">

    <ink.techat.client.common.widget.PortraitView
        android:id="@+id/search_img_portrait"
        android:layout_gravity="start|center_vertical"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:src="@drawable/default_portrait"/>

    <TextView
        android:id="@+id/search_txt_name"
        tools:text="@string/app_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/fontNameSize"
        android:textColor="@color/textPrimary"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <ImageView
        android:id="@+id/img_follow"
        android:layout_gravity="end|center_vertical"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:tint="@color/white_alpha_208"
        android:src="@drawable/sel_opt_done_add"
        android:background="@drawable/sel_btn_bg_accent_4"
        android:contentDescription="@string/app_name" />

</LinearLayout>